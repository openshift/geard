#!/bin/bash

ORIG_GOPATH=$GOPATH
export GOPATH=$ORIG_GOPATH:$ORIG_GOPATH/src/github.com/openshift/geard/vendor

function usage() {
	echo "build [-s] [-d] [-i]"
	echo "-s builds with selinux enabled"
	echo "-d builds/deploys systemd service with docker"
	echo "-i builds with idler daemon"
	exit 1
}

use_selinux=false
handle_systemd=false
build_idler=false

while getopts "sdi" o; do
	case "${o}" in
		s) use_selinux=true;;
		d) handle_systemd=true;;
		i) build_idler=true;;
		*) usage;;
	esac
done

tags=""

if $use_selinux; then
	tags="selinux"
fi

if $build_idler; then
  if [ ! -f /usr/include/libnetfilter_queue/libnetfilter_queue.h ]; then
    sudo yum install -y libnetfilter_queue-devel
  fi
	tags="$tags idler"
fi

if $handle_systemd; then
	docker build -rm -t ccoleman/geard /vagrant && sudo systemctl restart geard.service	
else
  echo "Downloading build dependencies"  
	echo "Note: Packages downloaded by go get at this point may need to be vendored."
	go get -d -tags "$tags" ./...
  echo "..done"
  
  echo "Building.."
	go install -tags "$tags" github.com/openshift/geard/cmd/gear
	go install -tags "$tags" github.com/openshift/geard/cmd/switchns
	go install -tags "$tags" github.com/openshift/geard/cmd/gear-auth-keys-command

	sudo /usr/bin/cp -f $ORIG_GOPATH/bin/gear-auth-keys-command .
	sudo /usr/bin/cp -f $ORIG_GOPATH/bin/switchns .
	sudo /usr/bin/cp -f $ORIG_GOPATH/bin/gear .
  echo "..done"  
fi
